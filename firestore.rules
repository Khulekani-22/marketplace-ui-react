rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read their own user doc, but only update their own credits
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId &&
        !("credits" in request.resource.data && request.resource.data.credits < resource.data.credits);
    }

    // Vouchers: only server can update
    match /vouchers/{voucherId} {
      allow read: if true;
      allow update: if false;
      allow create, delete: if false;
    }

    // Sponsored groups: readable by all authenticated users
    match /sponsoredGroups/{groupId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // Transactions: only server can write
    match /transactions/{txnId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create, update, delete: if false;
    }

    // Audit logs: only server can write
    match /auditLogs/{logId} {
      allow read: if false;
      allow write: if false;
    }
  }
}
